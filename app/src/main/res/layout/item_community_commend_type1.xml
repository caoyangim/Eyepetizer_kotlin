<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/item_cc_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:src="@color/colorTextPrimaryDark"/>

    <TextView
        android:id="@+id/item_cc_tit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/whitesmoke"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_cc_des"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="主题创作广场" />

    <TextView
        android:id="@+id/item_cc_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/floralwhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_cc_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@id/item_cc_tit"
        tools:text="发布你的创作和日常" />

    <ImageView
        android:id="@+id/item_cc_img_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guide"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@color/colorTextPrimaryDark"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/item_cc_tit_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/whitesmoke"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_cc_des_right"
        app:layout_constraintLeft_toLeftOf="@id/guide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="主题创作广场" />

    <TextView
        android:id="@+id/item_cc_des_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/floralwhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_cc_img_right"
        app:layout_constraintLeft_toLeftOf="@id/guide"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_cc_tit_right"
        tools:text="发布你的创作和日常" />

</androidx.constraintlayout.widget.ConstraintLayout>